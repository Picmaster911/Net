<UserControl x:Class="AppHealth.View.Elements.NotifyItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AppHealth.View.Elements"
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.9*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <TextBox Grid.Column="0"  Margin="0,0,8,0" Text="{Binding Messege}"  ></TextBox>
        <TextBox Grid.Column="1"  Margin="8,0,8,0" Text="{Binding DateTimeShowMassege}"  ></TextBox>
        <CheckBox Grid.Column="2" Content="{Binding Content}" IsChecked="{Binding Accept}" />
    </Grid>
</UserControl>
